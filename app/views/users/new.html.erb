<%# Form using form_with %>

<%= form_with model: @user do |form| %>
  <% @user.errors.full_messages.each do |msg| %>
    <%= msg %><br>
  <% end %><br>

  <%= form.label :username, 'Your username here: ' %>
  <%= form.text_field :username, value: 'John Smith' %><br><br>

  <%= form.label :email, 'Your email here: ' %>
  <%= form.email_field :email, value: 'example@example.com' %><br><br>

  <%= form.label :password, 'Your password here: ' %>
  <%= form.password_field :password %><br><br>

  <%= form.submit %>
<% end %>
